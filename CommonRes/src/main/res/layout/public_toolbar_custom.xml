<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/public_mainColor">

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/ic_svg_arrow_left_white"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="返回"
        android:textSize="@dimen/public_font_16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tool_right_button"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="课堂管控"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:textSize="@dimen/public_font_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tool_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/public_font_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_back"
        app:layout_constraintRight_toLeftOf="@+id/tool_right_button"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="标题" />


</androidx.constraintlayout.widget.ConstraintLayout>